<div class="container">

  <div class="d-flex justify-content-between header">
    <div class="text-center">
      <h1><%= @task.title %></h1>
    </div>
    <div>
      <h3><a href="/tasks/<%= @task.id %>/edit" class="btn btn-primary">Edit This Task</a></h3>
    </div>
  </div>

  <div class="details">
    <p><%= @task.details %></p>
  </div>

  <div>
    <p>Completed: <%= @task.completed %></p>
  </div>

  <div class="mt-3 text-center">
    <a href="/tasks"><i class="fa fa-undo mr-1" aria-hidden="true"></i>Back To List</a>
  </div>

</div>