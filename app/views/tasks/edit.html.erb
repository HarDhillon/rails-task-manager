<div class="container">

  <div class="header text-center">
    <h1>Edit Task</h1>
  </div>
  <div class="p-2">
    <%= form_for(@task) do |f| %>
    <div class=form-group>
      <%= f.label :title, class: "font-weight-bold" %>
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :details, class: "font-weight-bold" %>
      <%= f.text_field :details, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :completed %>
      <%= f.check_box :completed %>
    </div>

      <%= f.submit class: "btn btn-primary" %>
    <% end %>
  </div>

  <div class="mt-3 text-center">
    <a href="/tasks"><i class="fa fa-undo mr-1" aria-hidden="true"></i>Back To List</a>
  </div>

</div>